.side_bar
  .side_header
    .side_header__box
      %p.side_header__name
        = current_user.name
        name
      %ul.side_header_menu
        %li.side_header__edit
          = link_to new_group_path do
            = icon('fas', 'edit',  class: "side__header__icon--btn")
        %li.side_header__setting
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog',  class: "side__header__icon--btn")
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。